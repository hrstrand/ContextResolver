<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/backgroundgradient">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Context Resolver"
		android:id="@+id/header" android:textColor="#FF44AA88"
		android:textSize="35sp" android:gravity="center"
		android:paddingBottom="20dip" />
	<Button android:id="@+id/prefbutton" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="preferences"
		android:layout_below="@+id/header" />


	<Button android:id="@+id/analyzebutton" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Analyze today"
		android:layout_below="@+id/prefbutton" />
 
	<Button android:id="@+id/pickDaybutton" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Pick day"
		android:layout_below="@+id/analyzebutton"
		android:paddingLeft="20dip"
		android:paddingRight="20dip" 
		 />




</RelativeLayout>
